@page "/MyMachines"
@using MagazynierApp.Shared
@inject HttpClient HttpClient

<h3>Moje maszyny</h3>

<div class="main">
    @if (_machinesList != null)
    {
        @foreach (var machine in _machinesList)
        {
          
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-4">
                        <img src=@machine.ImageUrl class="card-img" alt="...">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <h5 class="card-title">@machine.Name</h5>
                            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p><em>Loading...</em></p>
    }
</div>

@code {
    Machine[] _machinesList;
    
    protected override async Task OnInitializedAsync()
    {
        _machinesList = await HttpClient.GetFromJsonAsync<Machine[]>("machines");
    }
    
    
}